---
import Container from "@components/container.astro";
import Features from "@components/features.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";

import serviceImg1 from "@assets/services-1.png";
import serviceImg2 from "@assets/services-2.png";
import serviceImg3 from "@assets/services-3.png";
import serviceImg4 from "@assets/services-4.png";
import serviceImg5 from "@assets/services-5.png";
import serviceImg6 from "@assets/services-6.png";

const services = [
  {
    title: "Instrumentation & Electrical Control System",
    desc: "This field covers the design, fabrications, installations and commissioning of systems. RUCOTECH INTEGRATED NIG LTD in the area of instrumentation (pneumatic/hydraulic & electronic) control systems; we have experienced professionals in terms of recognized standards and safety rules and regulations as obtainable in the Oil and gas industries.",
    img: serviceImg1,
  },
  {
    title: "Project Management",
    desc: "At RUCOTECH INTEGRATED NIG LTD our project team made up of qualified and experienced persons, mobilizes the necessary capacity and skills in close co-operation with the customer and according to the needs of the project. Far reaching co- ordination and a largely automated project administration makes it possible to link together various activities being performed by a number of different parties.",
    img: serviceImg2,
  },
  {
    title: "Mechanical Construction Works",
    desc: "Our services in this area cover the following",
    list: [
      "Engineering and Design",
      "Pipeline construction",
      "Manifold construction",
      "Pipe/flow line repairs",
      "Mechanical installation and commissioning",
      "Facilities modification and upgrade",
      "Revamping of all kinds of facilities",
      "Total overhauling of flow station",
      "Total overhauling of Equipment/Mechanical Valves",
      "Blasting And Painting Works",
    ],
    img: serviceImg3,
  },
  {
    title: "Civil Construction Works",
    desc: "Our services in this area cover the following:",
    list: [
      "Road and Bridge Construction Works",
      "Building construction",
      "Excavation and Grading Works",
      "Locations Preparation Works",
      "Concrete Production and Placing Works",
      "Cement Control Works",
    ],
    img: serviceImg4,
  },
  {
    title: "Procurement",
    desc: "Procurement Group is responsible for Purchasing, Inspection, Expediting and Traffic. They issue all purchasing orders from requisition prepared by  Design and Project Engineering. Equipment and materials are acquired from reliable sources of supply on a worldwide basis, guaranteeing the specified quality and the committed delivery time at the lowest possible price.",
    img: serviceImg5,
  },
  {
    title: "ICT Consultancy",
    desc: "We are a fully fledged ICT solutions provider. We offer ICT consultancy services always keeping our clients abreast with the current trends and helping in realizing all available ICT opportunities for business growth and stability. Our approaches are business oriented and our core goal is to provide sustainable ICT solutions to the business class.",
    img: serviceImg6,
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead align="left">
      <Fragment slot="title">We Provide world-class Services</Fragment>
    </Sectionhead>

    <Features features={services} />
  </Container>
</Layout>
